            <td><span style="color:rgb(0, 192, 160)"><!--STATUS--></span></td>
          </tr>
          <tr>
            <td>{{text req "money_supply"}}</td>
            <td style="width:3em"></td>
            <td><!--MONEY_SUPPLY--> €</td>
          </tr>
          <tr>
            <td>{{text req "last_maintenance"}}</td>
            <td style="width:3em"></td>
            <td><!--LAST_MAINTENANCE_DATE--></td>
          </tr>
          <tr>
            <td>{{text req "next_maintenance"}}</td>
